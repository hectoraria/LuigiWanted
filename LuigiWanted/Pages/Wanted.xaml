<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LuigiWanted.Pages.Wanted"
             Title="Wanted"
             xmlns:vm="clr-namespace:LuigiWanted.VM">

    <ContentPage.BindingContext>
        <vm:pantallaWantedVM />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Contador -->
        <Label 
            Text="Contador"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <Label 
            Text="{Binding TiempoRestante}" 
            FontSize="36"
            FontAttributes="Bold"
            TextColor="Red"
            HorizontalOptions="Center" />

        <Image Source="{Binding PersonajeABuscar.Foto}" 
               WidthRequest="150"
               HeightRequest="150"
               Aspect="AspectFit"
               HorizontalOptions="Center"/>

        <!-- Listado de puntuaciones -->
        <Frame BorderColor="Black" Padding="10" CornerRadius="10">
            <VerticalStackLayout>
                <Label Text="Listado de PuntuaciÃ³n" 
                       FontSize="22" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>

                <CollectionView ItemsSource="{Binding ListadoUsuarios}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="5">
                                <Grid ColumnDefinitions="2*,1*" Padding="5">
                                    <Label Text="{Binding Nombre}" 
                                           FontSize="18" 
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"
                                           Grid.Column="0"/>
                                    <Label Text="{Binding Score}" 
                                           FontSize="18" 
                                           TextColor="Blue"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="End"
                                           VerticalOptions="Center"
                                           Grid.Column="1"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>
