<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LuigiWanted.Pages.Wanted"
             Title="Wanted"
             xmlns:vm="clr-namespace:LuigiWanted.VM"
             BackgroundColor="#E3F2FD">

    <ContentPage.BindingContext>
        <vm:pantallaWantedVM />
    </ContentPage.BindingContext>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Contador -->
            <RowDefinition Height="Auto" />
            <!-- Imagen del personaje -->
            <RowDefinition Height="*" />
            <!-- Listado de puntuaciones (ocuparÃ¡ el espacio restante) -->
        </Grid.RowDefinitions>

        <!-- Contador -->
        <Frame BackgroundColor="#FFFFFF"
               CornerRadius="20"
               Padding="20"
               HasShadow="True"
               HorizontalOptions="Center"
               Grid.Row="0">
            <VerticalStackLayout Spacing="10">
                <Label 
                    Text="Contador"
                    FontSize="20" 
                    FontAttributes="Bold"
                    TextColor="#1976D2"
                    HorizontalOptions="Center" />

                <Label 
                    Text="{Binding TiempoRestante}" 
                    FontSize="36" 
                    FontAttributes="Bold"
                    TextColor="#D32F2F"
                    HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Frame>

        <!-- Imagen del personaje a buscar -->
        <Frame BackgroundColor="#FFFFFF"
               CornerRadius="20"
               Padding="20"
               HasShadow="True"
               HorizontalOptions="Center"
               Grid.Row="1"
               Margin="0,20,0,20">
            <Image Source="{Binding PersonajeABuscar.Foto}" 
                   WidthRequest="180"
                   HeightRequest="180"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"/>
        </Frame>

        <!-- Listado de puntuaciones -->
        <Frame BackgroundColor="#FFFFFF"
               CornerRadius="20"
               Padding="20"
               HasShadow="True"
               Grid.Row="2"
               VerticalOptions="FillAndExpand">
            <!-- Eliminado VerticalStackLayout innecesario -->
            <CollectionView ItemsSource="{Binding ListadoUsuarios}"
                            VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#F5F5F5"
                               CornerRadius="15"
                               Padding="15"
                               Margin="5"
                               HasShadow="True">
                            <Grid ColumnDefinitions="2*,1*" Padding="5">
                                <Label Text="{Binding Nombre}" 
                                       FontSize="18" 
                                       FontAttributes="Bold"
                                       TextColor="#1976D2"
                                       VerticalOptions="Center"
                                       Grid.Column="0"/>
                                <Label Text="{Binding Score}" 
                                       FontSize="18" 
                                       TextColor="#388E3C"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="End"
                                       VerticalOptions="Center"
                                       Grid.Column="1"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>

    </Grid>
</ContentPage>