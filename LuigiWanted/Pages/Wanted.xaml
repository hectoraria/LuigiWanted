<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LuigiWanted.Pages.Wanted"
             Title="Wanted"
             xmlns:vm="clr-namespace:LuigiWanted.VM">

    <ContentPage.BindingContext>
        <vm:pantallaWantedVM></vm:pantallaWantedVM>
    </ContentPage.BindingContext>
    <VerticalStackLayout Padding="20" Spacing="15">

        
        <Label 
            Text="Contador"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding TiempoSiguienteRonda}" 
            FontSize="30"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        
        <Frame BorderColor="Black" Padding="10" CornerRadius="10">
            <VerticalStackLayout>
                <Label Text="Listado de PuntuaciÃ³n" 
                       FontSize="20" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>

                <CollectionView ItemsSource="{Binding ListaPuntuacion}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="5">
                                <HorizontalStackLayout>
                                    <Label Text="{Binding Nombre}" 
                                           FontSize="18" 
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"/>
                                    <Label Text="{Binding Puntuacion}" 
                                           FontSize="18" 
                                           TextColor="Blue"
                                           HorizontalOptions="EndAndExpand"
                                           VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>